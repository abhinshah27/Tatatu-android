<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/dateHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Regular14"
            android:textColor="@color/black_54"
            android:textAlignment="center"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/messageStateContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Tues, 09 Oct, 14:27"/>

    <!-- INFO: 2019-12-24    removes top margin because dateHeader is hidden anyway -->
    <rs.highlande.app.tatatu.feature.chat.view.MessageOutgoingStateLayout
            android:id="@+id/messageStateContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/chat_margin_from_parent_start"
            android:layout_marginEnd="@dimen/padding_margin_large_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateHeader">
        android:layout_marginTop="@dimen/padding_margin_default"

        <androidx.emoji.widget.EmojiAppCompatTextView
                android:id="@+id/message"
                style="@style/ChatTextOutgoing"
                android:layout_alignParentEnd="true"
                tools:text="Lorem ipsum dolor "
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"/>

        <ImageView
                android:id="@+id/iconState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/padding_margin_small_8"
                android:layout_marginBottom="@dimen/padding_margin_small_8"
                android:visibility="invisible"
                android:duplicateParentState="true"
                android:tag="iconState"
                app:srcCompat="@drawable/message_state"
                app:layout_constraintEnd_toEndOf="@id/message"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@id/message"/>

        <TextView
                android:id="@+id/infoFooter"
                style="@style/ChatTextDetail"
                app:layout_constraintEnd_toEndOf="@+id/message"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/message"
                app:layout_constraintTop_toBottomOf="@id/message"
                tools:text="March 4, 14:33"/>

    </rs.highlande.app.tatatu.feature.chat.view.MessageOutgoingStateLayout>
</androidx.constraintlayout.widget.ConstraintLayout>