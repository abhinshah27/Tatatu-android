<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                style="@style/FollowRequestsLabel"
                android:id="@+id/followRequestsLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/follow_sent_requests_label"
                android:layout_marginBottom="@dimen/padding_margin_large_20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/followSentRequestsCountBadge"/>

        <TextView
                style="@style/FollowRequestsCount"
                android:id="@+id/followSentRequestsCountBadge"
                android:layout_width="@dimen/follow_sent_requests_icon_size"
                android:layout_height="@dimen/follow_sent_requests_icon_size"
                android:background="@drawable/follow_count_background"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@+id/followRequestsLabelTextView"
                app:layout_constraintBottom_toBottomOf="@+id/followRequestsLabelTextView"
                app:layout_constraintEnd_toStartOf="@+id/followArrowIconImageView"/>

        <ImageView
                style="@style/FollowRequestsArrowIcon"
                android:id="@+id/followArrowIconImageView"
                android:layout_width="@dimen/follow_requests_arrow_icon_size"
                android:layout_height="@dimen/follow_requests_arrow_icon_size"
                app:srcCompat="@drawable/ic_arrow_white"
                app:layout_constraintTop_toTopOf="@+id/followRequestsLabelTextView"
                app:layout_constraintBottom_toBottomOf="@+id/followRequestsLabelTextView"
                app:layout_constraintEnd_toEndOf="parent"/>

        <include
                layout="@layout/common_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/followRequestsLabelTextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
