<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="WalletViewModelBinding">

        <variable
            name="mViewModel"
            type="rs.highlande.app.tatatu.feature.wallet.view.viewModel.WalletViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/common_toolbar_wallet_balance" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:fillViewport="true"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/sp_16"
                android:paddingEnd="@dimen/sp_16"
                android:paddingBottom="@dimen/dp_58">

                <include
                    android:id="@+id/include_wallet_expand"
                    layout="@layout/include_wallet_expandable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_title"
                    style="@style/TxtWalletTitle"
                    android:layout_marginTop="@dimen/dp_28"
                    android:text="@string/title_your_crypto_wallet"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/include_wallet_expand" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_wallet_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_title">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_wallet_icon"
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:layout_marginStart="@dimen/dp_12"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ttu_token_gold" />

                    <View
                        android:id="@+id/divider_wallet"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="102dp"
                        android:layout_marginStart="@dimen/dp_24"
                        android:background="?inviteFriendsExpandableBackground"
                        app:layout_constraintBottom_toBottomOf="@id/img_wallet_icon"
                        app:layout_constraintStart_toEndOf="@id/img_wallet_icon"
                        app:layout_constraintTop_toTopOf="@id/img_wallet_icon" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_account_balance_title"
                        style="@style/TxtWalletSubTitle"
                        android:layout_marginStart="@dimen/dp_12"
                        android:text="@string/account_balance"
                        app:layout_constraintStart_toEndOf="@id/divider_wallet"
                        app:layout_constraintTop_toTopOf="@id/divider_wallet" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_ttu_token_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_6"
                        app:layout_constraintStart_toEndOf="@id/divider_wallet"
                        app:layout_constraintTop_toBottomOf="@id/txt_account_balance_title"
                        app:srcCompat="@drawable/ic_ttu_token_flat" />


                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_account_balance"
                            style="@style/TxtWalletBalance"
                            android:layout_width="0dp"
                            android:layout_marginStart="@dimen/dp_6"
                            tools:text="12345600000000.123"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            app:autoSizeStepGranularity="1sp"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="26sp"
                            app:autoSizeMinTextSize="12sp"
                            app:layout_constraintStart_toEndOf="@id/img_ttu_token_icon"
                            app:layout_constraintTop_toBottomOf="@id/txt_account_balance_title"
                            app:layout_constraintEnd_toEndOf="parent"/>


                    <View
                        android:id="@+id/clickHolderEquivalent"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintStart_toEndOf="@id/divider_wallet"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img_ttu_token_icon"
                        app:layout_constraintBottom_toBottomOf="@id/cl_wallet_detail"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_account_balance_equivalent_title"
                        style="@style/TxtWalletSubTitle"
                        android:text="@string/equivalent_to"
                        app:layout_constraintStart_toStartOf="@id/clickHolderEquivalent"
                        app:layout_constraintTop_toTopOf="@id/clickHolderEquivalent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_account_balance_equivalent"
                        style="@style/inviteFriendsExpandableTitle"
                        android:layout_marginStart="@dimen/dp_3"
                        android:text="@string/currency_dollar"
                        app:layout_constraintStart_toEndOf="@id/txt_account_balance_equivalent_title"
                        app:layout_constraintTop_toTopOf="@id/txt_account_balance_equivalent_title"
                        app:layout_constraintBottom_toBottomOf="@id/txt_account_balance_equivalent_title"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_3"
                        app:layout_constraintBottom_toBottomOf="@id/txt_account_balance_equivalent"
                        app:layout_constraintStart_toEndOf="@id/txt_account_balance_equivalent"
                        app:layout_constraintTop_toTopOf="@id/txt_account_balance_equivalent"
                        app:srcCompat="@drawable/ic_arrow_wallet" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_account_balance_equivalent_amount"
                        style="@style/inviteFriendsExpandableTitle"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="@string/demo_convert_balance"
                        app:layout_constraintStart_toStartOf="@id/txt_account_balance_equivalent_title"
                        app:layout_constraintTop_toBottomOf="@id/txt_account_balance_equivalent_title" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_notes"
                    style="@style/TxtWalletSubTitle"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_24"
                    android:text="@string/if_you_have_recently"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_wallet_detail" />

                <View
                    android:id="@+id/divider_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="?inviteFriendsExpandableBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_notes" />


                <FrameLayout
                    android:id="@+id/btn_redeem_now"
                    style="@style/FlWallet"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/btn_login"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_bottom">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_redeem_now"
                        style="@style/TxtRedeemNow"
                        android:drawableStart="@drawable/ic_cart_icon"
                        android:text="@string/btn_redeem_now" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btn_view_wallet_bg"
                    style="@style/FlWallet"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/btn_discard_changes"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_redeem_now">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_view_wallet"
                        style="@style/BtnViewWallet"
                        android:text="@string/btn_view_wallet" />

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>