<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

        <include layout="@layout/common_profile_picture"
                 android:id="@+id/userAvatarImageView"
                 android:layout_width="@dimen/post_avatar_size"
                 android:layout_height="@dimen/post_avatar_size"
                 app:layout_constraintTop_toTopOf="@+id/userAvatarNewMomentImageView"
                 app:layout_constraintBottom_toBottomOf="@+id/userAvatarNewMomentImageView"
                 app:layout_constraintStart_toStartOf="@+id/userAvatarNewMomentImageView"
                 app:layout_constraintEnd_toEndOf="@+id/userAvatarNewMomentImageView"/>

        <ImageView
                style="@style/PostUserAvatarImageView"
                android:id="@+id/userAvatarNewMomentImageView"
                android:layout_width="@dimen/post_avatar_outside_size"
                android:layout_height="@dimen/post_avatar_outside_size"
                app:srcCompat="@drawable/moment_background_thin_borders"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                style="@style/PostUserNameTextView"
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/placeholder"
                android:drawablePadding="@dimen/padding_margin_small_4"
                app:layout_constraintTop_toTopOf="@+id/userAvatarImageView"
                app:layout_constraintBottom_toBottomOf="@+id/userAvatarImageView"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/userAvatarImageView"
                app:layout_constraintEnd_toStartOf="@+id/postOptionsImageView"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                style="@style/PostAgeTextView"
                android:id="@+id/postAgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/placeholder"
                app:layout_constraintTop_toBottomOf="@+id/userNameTextView"
                app:layout_constraintStart_toStartOf="@+id/userNameTextView"/>

        <ImageView
                style="@style/PostOptionsImageView"
                android:id="@+id/postOptionsImageView"
                android:layout_width="@dimen/post_options_size"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_overflow"
                app:layout_constraintTop_toTopOf="@+id/userAvatarImageView"
                app:layout_constraintBottom_toBottomOf="@+id/userAvatarImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"/>

        <View
                android:id="@+id/postOptionsSection"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintTop_toTopOf="@+id/postOptionsImageView"
                app:layout_constraintBottom_toBottomOf="@+id/postOptionsImageView"
                app:layout_constraintStart_toStartOf="@+id/postOptionsImageView"
                app:layout_constraintEnd_toEndOf="@+id/postOptionsImageView"/>

        <ImageView
                style="@style/PostImageView"
                android:id="@+id/postImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/postAgeTextView"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.Group
                android:id="@+id/postTTUBalanceGroup"
                app:constraint_referenced_ids="postTTUBalanceSection,postTTUBalanceLabel,postTTUBadgeImageView,postTTUBalanceTextView"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/postTTUBalanceSection"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_48"
                android:background="@color/black_54"
                app:layout_constraintStart_toStartOf="@+id/postImageView"
                app:layout_constraintEnd_toEndOf="@+id/postImageView"
                app:layout_constraintBottom_toBottomOf="@+id/postImageView"/>

        <TextView
                style="@style/PostBalanceTextView.Label"
                android:id="@+id/postTTUBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/post_ttu_balance_label"
                app:layout_constraintTop_toTopOf="@+id/postTTUBalanceSection"
                app:layout_constraintBottom_toBottomOf="@+id/postTTUBalanceSection"
                app:layout_constraintStart_toStartOf="@+id/postTTUBalanceSection"/>

        <ImageView
                style="@style/PostBalanceImageView"
                android:id="@+id/postTTUBadgeImageView"
                app:srcCompat="@drawable/ic_ttu_token_flat"
                app:layout_constraintTop_toTopOf="@+id/postTTUBalanceSection"
                app:layout_constraintBottom_toBottomOf="@+id/postTTUBalanceSection"
                app:layout_constraintStart_toEndOf="@+id/postTTUBalanceLabel"/>

        <TextView
                style="@style/PostBalanceTextView.Label"
                android:id="@+id/postTTUBalanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/placeholder"
                app:layout_constraintTop_toTopOf="@+id/postTTUBalanceSection"
                app:layout_constraintBottom_toBottomOf="@+id/postTTUBalanceSection"
                app:layout_constraintStart_toEndOf="@+id/postTTUBadgeImageView"/>

        <FrameLayout
                android:id="@+id/postExoplayerContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintTop_toTopOf="@+id/postImageView"
                app:layout_constraintBottom_toBottomOf="@+id/postImageView"
                app:layout_constraintEnd_toEndOf="@+id/postImageView"
                app:layout_constraintStart_toStartOf="@+id/postImageView"
                android:visibility="invisible">

            <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/postExoplayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?colorPrimary"
                    app:use_controller="false" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/postPlay"
                    android:layout_width="@dimen/post_play_icon_size"
                    android:layout_height="@dimen/post_play_icon_size"
                    android:elevation="@dimen/dp_4"
                    app:srcCompat="@drawable/ic_play"
                    android:layout_gravity="center"
                    android:visibility="gone" />
        </FrameLayout>

        <TextView
                style="@style/PostNewsTextView"
                android:id="@+id/postNewsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post_news_label"
                app:layout_constraintTop_toTopOf="@+id/postImageView"
                app:layout_constraintStart_toStartOf="@+id/postImageView"/>

        <View
            android:id="@+id/postLikesSection"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@+id/postLikesImageView"
            app:layout_constraintBottom_toBottomOf="@+id/postLikesImageView"
            app:layout_constraintStart_toStartOf="@+id/postLikesImageView"
            app:layout_constraintEnd_toEndOf="@+id/postLikesImageView"/>

        <ImageView
            style="@style/PostIconImageView.Like"
            android:id="@+id/postLikesImageView"
            android:layout_width="@dimen/post_icon_size"
            android:layout_height="@dimen/post_icon_size"
            app:srcCompat="@drawable/ic_like"
            app:layout_constraintTop_toBottomOf="@+id/postImageView"
            app:layout_constraintStart_toStartOf="parent"/>


        <ImageView
            style="@style/PostIconImageView.Comment"
            android:id="@+id/postCommentsImageView"
            android:layout_width="@dimen/post_icon_size"
            android:layout_height="@dimen/post_icon_size"
            app:srcCompat="@drawable/ic_comments"
            app:layout_constraintTop_toBottomOf="@+id/postImageView"
            app:layout_constraintStart_toEndOf="@+id/postLikesCountTextView"/>

        <View
            android:id="@+id/postSharesSection"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="@+id/postSharesImageView"
            app:layout_constraintBottom_toBottomOf="@+id/postSharesImageView"
            app:layout_constraintStart_toStartOf="@+id/postSharesImageView"
            app:layout_constraintEnd_toEndOf="@+id/postSharesImageView"/>

        <ImageView
            style="@style/PostShareIconImageView"
            android:id="@+id/postSharesImageView"
            android:layout_width="@dimen/post_icon_size"
            android:layout_height="@dimen/post_icon_size"
            app:srcCompat="@drawable/ic_share"
            app:layout_constraintTop_toBottomOf="@+id/postImageView"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            style="@style/DefaultDivider"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_size"
            android:layout_marginTop="@dimen/dp_18"
            android:id="@+id/dividerPostStatsTop"
            app:layout_constraintTop_toBottomOf="@id/postSharesImageView"
            app:layout_constraintBottom_toTopOf="@id/postLikesCountTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/postGoToLikesSection"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="@+id/postLikesCountTextView"
            app:layout_constraintBottom_toBottomOf="@+id/postLikesCountTextView"
            app:layout_constraintStart_toStartOf="@+id/postLikesCountTextView"
            app:layout_constraintEnd_toEndOf="@+id/postLikesCountLabel"/>

        <TextView
            style="@style/PostCountTextView"
            android:id="@+id/postLikesCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/placeholder"
            app:layout_constraintTop_toBottomOf="@+id/dividerPostStatsTop"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            style="@style/PostCountTextView.Label"
            android:id="@+id/postLikesCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_likes"
            app:layout_constraintTop_toTopOf="@+id/postLikesCountTextView"
            app:layout_constraintBottom_toBottomOf="@+id/postLikesCountTextView"
            app:layout_constraintStart_toEndOf="@+id/postLikesCountTextView"/>

        <TextView
            style="@style/PostCountTextView"
            android:id="@+id/postCommentsCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/placeholder"
            app:layout_constraintTop_toTopOf="@+id/postLikesCountTextView"
            app:layout_constraintBottom_toBottomOf="@+id/postLikesCountTextView"
            app:layout_constraintStart_toEndOf="@+id/postLikesCountLabel"/>

        <TextView
            style="@style/PostCountTextView.Label"
            android:id="@+id/postCommentsCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_comments"
            app:layout_constraintTop_toTopOf="@+id/postCommentsCountTextView"
            app:layout_constraintBottom_toBottomOf="@+id/postCommentsCountTextView"
            app:layout_constraintStart_toEndOf="@+id/postCommentsCountTextView"/>

        <TextView
            style="@style/PostShareCountTextView"
            android:id="@+id/postSharesCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/placeholder"
            app:layout_constraintTop_toTopOf="@id/postSharesCountLabel"
            app:layout_constraintBottom_toBottomOf="@id/postSharesCountLabel"
            app:layout_constraintEnd_toStartOf="@id/postSharesCountLabel"/>

        <TextView
            style="@style/PostShareCountTextView.Label"
            android:id="@+id/postSharesCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_shares"
            app:layout_constraintTop_toBottomOf="@+id/dividerPostStatsTop"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            style="@style/DefaultDivider"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_size"
            android:id="@+id/dividerPostStatsBottom"
            app:layout_constraintTop_toBottomOf="@id/postSharesCountTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/postTitleTextView"
                style="@style/PostTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/postSharesCountLabel"
                app:layout_constraintStart_toStartOf="@+id/postLikesImageView"
                app:layout_constraintTop_toBottomOf="@+id/dividerPostStatsBottom"
                app:layout_constraintVertical_bias="0.0" />

        <TextView
                android:id="@+id/postBodyTextView"
                style="@style/PostBodyTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/postSharesCountLabel"
                app:layout_constraintStart_toStartOf="@+id/postLikesImageView"
                app:layout_constraintTop_toBottomOf="@+id/postTitleTextView"
                app:layout_constraintVertical_bias="0.0"
                tools:text="@string/placeholderLong" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>