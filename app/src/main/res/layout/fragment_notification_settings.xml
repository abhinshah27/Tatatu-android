<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="SettingsNotificationsViewModelBinding">

        <variable
            name="mViewModel"
            type="rs.highlande.app.tatatu.feature.account.settings.view.viewModel.SettingsNotificationsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <include
            android:id="@+id/tb_notification_settings"
            layout="@layout/toolbar_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_push_notification_settings_title"
                    style="@style/txtSettingsProfileName"
                    android:layout_marginTop="@dimen/dp_26"
                    android:text="@string/title_push_notification_settings"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_enable_push"
                    style="@style/txtNotificationSettings"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="start|center"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/switch_btn_enable_all_push"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_push_notification_settings_title" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_push"
                    style="@style/switch_common"
                    android:checked="true"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@id/txt_enable_push"
                    app:layout_constraintEnd_toEndOf="@id/txt_enable_push"
                    app:layout_constraintTop_toTopOf="@id/txt_enable_push" />

                <View
                    android:id="@+id/push_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?buttonColorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_enable_push" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_push_enable_content"
                    style="@style/txtNotificationSettings"
                    android:layout_width="match_parent"
                    android:gravity="start|center"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/switch_btn_enable_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/push_divider" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_push_content"
                    style="@style/switch_common"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@id/txt_push_enable_content"
                    app:layout_constraintEnd_toEndOf="@id/txt_push_enable_content"
                    app:layout_constraintTop_toTopOf="@id/txt_push_enable_content" />

                <View
                    android:id="@+id/push_content_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?buttonColorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_push_enable_content" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_push_enable_notification"
                    style="@style/txtNotificationSettings"
                    android:layout_width="match_parent"
                    android:gravity="start|center"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/switch_btn_enable_notifications"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/push_content_divider" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_push_enable_notification"
                    style="@style/switch_common"
                    android:checked="true"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@id/txt_push_enable_notification"
                    app:layout_constraintEnd_toEndOf="@id/txt_push_enable_notification"
                    app:layout_constraintTop_toTopOf="@id/txt_push_enable_notification" />

                <View
                    android:id="@+id/push_enable_notification"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?buttonColorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_push_enable_notification" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_push_enable_notification_when"
                    style="@style/txtNotificationSettings"
                    android:layout_width="match_parent"
                    android:gravity="start|center"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/switch_btn_enable_notifications_when"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/push_enable_notification" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_push_enable_notification_when"
                    style="@style/switch_common"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@id/txt_push_enable_notification_when"
                    app:layout_constraintEnd_toEndOf="@id/txt_push_enable_notification_when"
                    app:layout_constraintTop_toTopOf="@id/txt_push_enable_notification_when" />

                <View
                    android:id="@+id/push_enable_notification_when"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="-16dp"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginEnd="-16dp"
                    android:background="?buttonColorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_push_enable_notification_when" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_in_app_notification_settings_title"
                    style="@style/txtSettingsProfileName"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="@string/title_in_app_notification_settings"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/push_enable_notification_when" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_enable_in_app"
                    style="@style/txtNotificationSettings"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="start|center"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/switch_btn_enable_all_in"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_in_app_notification_settings_title" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_in_app"
                    style="@style/switch_common"
                    android:checked="true"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@id/txt_enable_in_app"
                    app:layout_constraintEnd_toEndOf="@id/txt_enable_in_app"
                    app:layout_constraintTop_toTopOf="@id/txt_enable_in_app" />

                <View
                    android:id="@+id/in_app_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?buttonColorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_enable_in_app" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_in_app_enable_content"
                    style="@style/txtNotificationSettings"
                    android:layout_width="match_parent"
                    android:gravity="start|center"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/switch_btn_enable_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/in_app_divider" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_in_app_content"
                    style="@style/switch_common"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@id/txt_in_app_enable_content"
                    app:layout_constraintEnd_toEndOf="@id/txt_in_app_enable_content"
                    app:layout_constraintTop_toTopOf="@id/txt_in_app_enable_content" />

                <View
                    android:id="@+id/in_app_content_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?buttonColorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_in_app_enable_content" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_in_app_enable_notification"
                    style="@style/txtNotificationSettings"
                    android:layout_width="match_parent"
                    android:gravity="start|center"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/switch_btn_enable_notifications"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/in_app_content_divider" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_in_app_enable_notification"
                    style="@style/switch_common"
                    android:checked="true"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@id/txt_in_app_enable_notification"
                    app:layout_constraintEnd_toEndOf="@id/txt_in_app_enable_notification"
                    app:layout_constraintTop_toTopOf="@id/txt_in_app_enable_notification" />

                <View
                    android:id="@+id/in_app_enable_notification"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?buttonColorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_in_app_enable_notification" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_in_app_enable_notification_when"
                    style="@style/txtNotificationSettings"
                    android:layout_width="match_parent"
                    android:gravity="start|center"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="@string/switch_btn_enable_notifications_when"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/in_app_enable_notification" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_in_app_enable_notification_when"
                    style="@style/switch_common"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@id/txt_in_app_enable_notification_when"
                    app:layout_constraintEnd_toEndOf="@id/txt_in_app_enable_notification_when"
                    app:layout_constraintTop_toTopOf="@id/txt_in_app_enable_notification_when" />

                <View
                    android:id="@+id/in_app_enable_notification_when"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="-16dp"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginEnd="-16dp"
                    android:layout_marginBottom="@dimen/dp_100"
                    android:background="?dividerColor"
                    android:paddingBottom="52dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_in_app_enable_notification_when" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>