<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:layout_width="@dimen/item_preview_width"
                                                       android:layout_height="wrap_content"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
                android:id="@+id/backgroundHolder"
                android:layout_width="0dp" android:layout_height="@dimen/item_preview_height"
                android:background="?preloadingBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/ic_preloading_video"
                app:layout_constraintWidth_percent=".3"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="@+id/backgroundHolder"
                app:layout_constraintBottom_toBottomOf="@+id/backgroundHolder"
                app:layout_constraintEnd_toEndOf="@+id/backgroundHolder"
                app:layout_constraintTop_toTopOf="@+id/backgroundHolder"/>

        <ImageView android:layout_width="0dp" android:layout_height="@dimen/item_preview_height"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent" android:id="@+id/preview"
                   app:layout_constraintTop_toTopOf="parent"/>

        <!-- View handling ripple effect -->
        <View android:layout_width="0dp" android:layout_height="0dp"
              android:background="@drawable/default_ripple_inverted"
              app:layout_constraintStart_toStartOf="@+id/preview"
              app:layout_constraintBottom_toBottomOf="@+id/preview"
              app:layout_constraintEnd_toEndOf="@+id/preview"
              app:layout_constraintTop_toTopOf="@+id/preview"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>