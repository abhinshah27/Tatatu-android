<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:id="@+id/wfiHeader"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="@dimen/header_wfi_height"
                                                       android:background="?wfiBackground">

        <View android:layout_width="0dp" android:layout_height="match_parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/sectionFriends"
              android:background="?selectableItemBackground"
              android:id="@+id/sectionWallet"
              android:paddingStart="@dimen/padding_margin_medium_16"
              android:paddingEnd="0dp"
              android:orientation="vertical"/>

        <TextView
                android:id="@+id/walletLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_margin_default"
                style="@style/WFILabel"
                android:text="@string/wfi_balance"
                android:drawableEnd="@drawable/ic_chevron_accent_right"
                android:drawablePadding="@dimen/padding_margin_small_8"
                app:layout_constraintTop_toTopOf="@id/sectionWallet"
                app:layout_constraintBottom_toTopOf="@id/walletText"
                app:layout_constraintStart_toStartOf="@id/sectionWallet"
                app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
                android:id="@+id/walletText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/WFIText"
                tools:text="450.000000000"
                android:drawableStart="@drawable/ic_ttu_token_flat"
                android:drawablePadding="@dimen/padding_margin_small_6"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeMaxTextSize="@dimen/sp_14"
                app:autoSizeMinTextSize="@dimen/sp_12"
                app:layout_constraintTop_toBottomOf="@id/walletLabel"
                app:layout_constraintBottom_toBottomOf="@id/sectionWallet"
                app:layout_constraintStart_toStartOf="@+id/walletLabel"
                app:layout_constraintEnd_toStartOf="@+id/sectionFriends"/>

        <View android:layout_width="0dp" android:layout_height="match_parent"
                      android:background="?selectableItemBackground"
                      app:layout_constraintStart_toEndOf="@id/sectionWallet"
                      app:layout_constraintEnd_toStartOf="@id/sectionInvite"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/sectionFriends"
                      android:orientation="vertical"/>

        <TextView
                android:id="@+id/friendsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/WFILabel"
                android:text="@string/wfi_friends"
                app:layout_constraintEnd_toEndOf="@id/sectionFriends"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/sectionFriends"
                app:layout_constraintBaseline_toBaselineOf="@+id/walletLabel"/>

        <TextView
                android:id="@+id/friendsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/WFIText"
                tools:text="1747"
                app:layout_constraintBaseline_toBaselineOf="@+id/walletText"
                app:layout_constraintStart_toStartOf="@+id/sectionFriends" android:layout_marginStart="@dimen/padding_margin_small_8"
                app:layout_constraintEnd_toStartOf="@+id/sectionInvite" android:layout_marginEnd="@dimen/padding_margin_small_8"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sectionInvite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/sectionFriends"
                app:layout_constraintEnd_toEndOf="parent">

            <include layout="@layout/common_divider_vert"
                     android:id="@+id/divider"
                     android:layout_width="@dimen/divider_size"
                     android:layout_height="0dp"
                     android:layout_marginTop="@dimen/header_wfi_divider_margins"
                     android:layout_marginBottom="@dimen/header_wfi_divider_margins"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/inviteLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/WFILabel"
                android:text="@string/wfi_invite"
                app:layout_constraintEnd_toEndOf="@id/sectionInvite"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/sectionInvite"
                app:layout_constraintBaseline_toBaselineOf="@+id/walletLabel"/>

        <ImageView
                android:id="@+id/plus"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/padding_margin_default"
                app:srcCompat="@drawable/ic_plus_add"
                app:layout_constraintStart_toStartOf="@+id/inviteLabel"
                app:layout_constraintEnd_toEndOf="@+id/inviteLabel"
        app:layout_constraintTop_toBottomOf="@id/inviteLabel"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>