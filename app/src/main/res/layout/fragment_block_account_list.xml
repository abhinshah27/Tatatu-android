<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="SettingsBlockAccountViewModelBinding">

        <variable
            name="mViewModel"
            type="rs.highlande.app.tatatu.feature.account.settings.view.viewModel.SettingsBlockAccountViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <include
            android:id="@+id/tb_main_settings"
            layout="@layout/toolbar_settings" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_block_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_22"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_no_block_account"
            style="@style/txtBlockProfilesNotFound"
            android:layout_marginTop="8dp"
            android:text="@string/block_profiles_not_found"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_22"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rv_block_account" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>