<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="?colorPrimary">


    <include layout="@layout/common_toolbar_back"
             app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:id="@+id/include3"/>


    <include layout="@layout/common_search_box"
             android:layout_width="0dp"
             android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/include3"
             android:layout_marginTop="@dimen/padding_margin_large_30"
             android:layout_marginStart="@dimen/padding_margin_default"
             android:layout_marginEnd="@dimen/padding_margin_default"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent" android:id="@+id/searchBox"/>


    <TextView
            android:id="@+id/searchNoResult"
            style="@style/NoResultText"
            android:layout_marginTop="0dp"
            android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchBox"/>


    <TextView
            android:id="@+id/searchResultsFor"
            style="@style/PrimaryText"
            android:textSize="@dimen/sp_18"
            android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="@+id/searchBox"
            android:layout_marginTop="@dimen/padding_margin_large_24"
            tools:text="Results for "
            app:layout_constraintStart_toStartOf="@+id/searchBox"
            app:layout_constraintTop_toBottomOf="@+id/searchBox"/>


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:id="@+id/searchRV"
            android:layout_height="0dp"
            android:background="?colorPrimary"
            android:layout_marginTop="@dimen/padding_margin_default"
            android:paddingStart="@dimen/padding_margin_default"
            android:paddingEnd="@dimen/padding_margin_default"
            android:clipToPadding="false"
            app:spanCount="3"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchResultsFor"/>

    <androidx.constraintlayout.widget.Group
            android:id="@+id/groupResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:constraint_referenced_ids="searchResultsFor,searchRV"/>

</androidx.constraintlayout.widget.ConstraintLayout>