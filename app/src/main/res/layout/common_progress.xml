<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll_post_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/padding_margin_large_34"
        android:paddingEnd="@dimen/padding_margin_large_34"
        android:paddingBottom="@dimen/padding_margin_large_34">

    <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:indeterminateTint="?colorAccent"
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" android:id="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@id/message"
            app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
            style="@style/Regular16"
            android:textColor="?colorAccent"
            tools:text="Logging you in"
            android:textAlignment="center"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/message"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="@dimen/padding_margin_medium_14"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"/>

</androidx.constraintlayout.widget.ConstraintLayout>