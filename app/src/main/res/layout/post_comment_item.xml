<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">
        
        <include layout="@layout/common_profile_picture"
                style="@style/PostCommentUserAvatarImageView"
                android:id="@+id/postCommentUserAvatarImageView"
                android:src="@drawable/placeholder"
                android:layout_width="@dimen/post_comment_avatar_size"
                android:layout_height="@dimen/post_comment_avatar_size"
                app:layout_constraintStart_toStartOf="@+id/postCommentUserMomentImageView"
                app:layout_constraintEnd_toEndOf="@+id/postCommentUserMomentImageView"
                app:layout_constraintTop_toTopOf="@+id/postCommentUserMomentImageView"
                app:layout_constraintBottom_toBottomOf="@+id/postCommentUserMomentImageView"/>

        <ImageView
                style="@style/PostCommentUserAvatarMomentImageView"
                android:id="@+id/postCommentUserMomentImageView"
                app:srcCompat="@drawable/moment_background"
                android:layout_width="@dimen/post_comment_avatar_moment_size"
                android:layout_height="@dimen/post_comment_avatar_moment_size"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <View
                android:id="@+id/commentMainContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/common_rounded_corners_box"
                android:backgroundTint="?boxBackground"
                app:layout_constraintTop_toTopOf="@+id/postCommentUserAvatarImageView"
                app:layout_constraintBottom_toTopOf="@+id/commentAgeTextView"
                app:layout_constraintStart_toStartOf="@+id/postCommentBodyTextView"
                app:layout_constraintEnd_toEndOf="@+id/postCommentBodyTextView"/>

        <androidx.emoji.widget.EmojiAppCompatTextView
                style="@style/PostCommentUserNameTextView"
                android:id="@+id/postCommentUserNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                app:layout_constraintTop_toTopOf="@+id/postCommentUserAvatarImageView"
                app:layout_constraintBottom_toBottomOf="@+id/postCommentUserAvatarImageView"
                app:layout_constraintStart_toEndOf="@+id/postCommentUserAvatarImageView"/>

        <androidx.emoji.widget.EmojiAppCompatTextView
                style="@style/PostCommentBodyTextView"
                android:id="@+id/postCommentBodyTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/placeholderLong"
                app:layout_constraintTop_toBottomOf="@+id/postCommentUserNameTextView"
                app:layout_constraintStart_toStartOf="@+id/postCommentUserNameTextView"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
                style="@style/CommentIconImageView.Like"
                android:id="@+id/commentLikesImageView"
                android:layout_width="@dimen/post_icon_size"
                android:layout_height="@dimen/post_icon_size"
                app:srcCompat="@drawable/ic_like"
                android:layout_marginStart="@dimen/padding_margin_medium_16"
                app:layout_constraintTop_toBottomOf="@+id/postCommentBodyTextView"
                app:layout_constraintBottom_toTopOf="@+id/commentAgeTextView"
                app:layout_constraintStart_toStartOf="@+id/postCommentUserNameTextView"/>

        <TextView
                style="@style/PostCountTextView"
                android:id="@+id/commentLikesCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                app:layout_constraintTop_toTopOf="@+id/commentLikesImageView"
                app:layout_constraintBottom_toBottomOf="@+id/commentLikesImageView"
                app:layout_constraintStart_toEndOf="@+id/commentLikesImageView"/>

        <View
                android:id="@+id/commentLikesSection"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintTop_toTopOf="@+id/commentLikesImageView"
                app:layout_constraintBottom_toBottomOf="@+id/commentLikesImageView"
                app:layout_constraintStart_toStartOf="@+id/commentLikesImageView"
                app:layout_constraintEnd_toEndOf="@+id/commentLikesCountTextView"/>

        <ImageView
                style="@style/CommentIconImageView"
                android:id="@+id/commentsReplyImageView"
                android:layout_width="@dimen/post_icon_size"
                android:layout_height="@dimen/post_icon_size"
                app:srcCompat="@drawable/ic_comments"
                app:layout_constraintTop_toBottomOf="@+id/postCommentBodyTextView"
                app:layout_constraintBottom_toTopOf="@+id/commentAgeTextView"
                app:layout_constraintStart_toEndOf="@+id/commentLikesCountTextView"/>

        <TextView
                style="@style/PostCountTextView"
                android:id="@+id/commentReplyCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                app:layout_constraintTop_toTopOf="@+id/commentsReplyImageView"
                app:layout_constraintBottom_toBottomOf="@+id/commentsReplyImageView"
                app:layout_constraintStart_toEndOf="@+id/commentsReplyImageView"/>

        <TextView
                style="@style/CommentUnderBoxText.Age"
                android:id="@+id/commentAgeTextView"
                android:text="@string/placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/postCommentUserNameTextView"/>

        <TextView
                style="@style/CommentUnderBoxText.Reply"
                android:id="@+id/commentReplyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/postCommentBodyTextView"/>

        <androidx.constraintlayout.widget.Group android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/groupReply"
        app:constraint_referenced_ids="commentsReplyImageView,commentReplyCountTextView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>