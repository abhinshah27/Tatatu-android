<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_common"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_collapseMode="pin"
        style="@style/DefaultToolbar">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/default_ripple_toolbar"
                android:padding="@dimen/padding_margin_small_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back"
                app:tint="?iconColorSelected" />

        <include
                android:id="@+id/profilePicture"
                layout="@layout/common_profile_picture"
                android:layout_width="@dimen/chat_profile_picture_size"
                android:layout_height="@dimen/chat_profile_picture_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/backArrow"
                app:layout_constraintTop_toTopOf="parent" />

        <View
                android:id="@+id/availabilityIndicator"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/selector_chat_availability"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/profilePicture"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@+id/profilePicture"
                app:layout_constraintHeight_percent=".12" />

        <androidx.emoji.widget.EmojiAppCompatTextView
                android:id="@+id/userName"
                style="@style/TextViewToolbarTitle"
                android:layout_width="0dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                app:layout_constraintBottom_toTopOf="@id/participantLastSeen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profilePicture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="profileName" />

        <TextView
                android:id="@+id/participantLastSeen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/ChatMessagesLatSeen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/userName"
                app:layout_constraintTop_toBottomOf="@id/userName"
                android:visibility="visible"
                tools:text="Last seen 12:58Last seen 12:58Last seen 12:58Last seen 12:58Last seen 12:58Last seen 12:58Last seen 12:58"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>