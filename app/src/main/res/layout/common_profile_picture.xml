<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   tools:layout_width="70dp"
                                                   tools:layout_height="70dp"
                                                   android:elevation="6dp"
                                                   android:clipToPadding="false"
                                                   android:clipChildren="false">

    <ImageView android:layout_width="0dp" android:layout_height="0dp"
               android:clipToPadding="false"
               android:background="@drawable/ic_settings_profile"
               app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent" android:id="@+id/picture"
               tools:srcCompat="@tools:sample/avatars[14]" app:layout_constraintDimensionRatio="1:1"/>

    <ImageView
            android:id="@+id/celebrityIndicator"
            android:layout_width="0dp" android:layout_height="0dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_indicator_celeb"
            app:layout_constraintEnd_toEndOf="@+id/picture"
            app:layout_constraintBottom_toBottomOf="@+id/picture"
            app:layout_constraintStart_toStartOf="@+id/picture"
            app:layout_constraintTop_toTopOf="@+id/picture" app:layout_constraintDimensionRatio="1:1"/>

    <View android:layout_width="0dp" android:layout_height="0dp"
          app:layout_constraintDimensionRatio="h,1:1"
          android:background="@drawable/default_ripple_inverted"
          android:clipToPadding="false"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>