<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="LoginViewModelBinding">

        <variable
            name="loginViewModel"
            type="rs.highlande.app.tatatu.feature.authentication.view.login.LoginViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_54"
            app:srcCompat="@drawable/ic_logo_red" />

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_28" android:scrollbars="none">

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_128">

                <!-- INFO: 2019-08-26    Mobile log in has been hidden -->
                <RadioGroup
                        android:id="@+id/rg_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_24"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp_28"
                        android:paddingEnd="@dimen/dp_28"
                        android:onCheckedChanged="@{loginViewModel.radioGroupClick}"
                        android:orientation="horizontal"
                        android:visibility="gone">

                    <RadioButton
                            android:id="@+id/rb_email"
                            style="@style/loginRadioButton"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:checked="true"
                            android:text="@string/rb_login_email"/>

                    <RadioButton
                            android:id="@+id/rb_mobile"
                            style="@style/loginRadioButton"
                            android:layout_marginStart="@dimen/dp_15"
                            android:text="@string/rb_login_mobile"/>

                </RadioGroup>

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_email_mobile"
                        android:paddingStart="@dimen/dp_28"
                        android:paddingEnd="@dimen/dp_28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_40"
                        android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/txl_login_email"
                            style="@style/CommonTextInputLayout"
                            android:hint="@string/edt_login_email_title"
                            android:visibility="@{safeUnbox(loginViewModel.emailVisibility)}">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_login_email"
                                style="@style/CommonTextInputEditText"
                                android:inputType="textEmailAddress"
                                app:addTextChangedListener="@{loginViewModel.emailTextWatcher}"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <FrameLayout
                            android:id="@+id/cl_mobile"
                            android:layout_width="match_parent"
                            android:layout_marginTop="-18dp"
                            android:layout_height="wrap_content"
                            android:visibility="@{safeUnbox(loginViewModel.mobileVisibility)}">

                        <androidx.constraintlayout.widget.Barrier
                                android:id="@+id/divider_barrier"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:barrierDirection="left"
                                app:constraint_referenced_ids="view2"/>

                        <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txl_mobile"
                                style="@style/CommonTextInputLayout"
                                android:layout_marginTop="@dimen/dp_18"
                                android:hint="@string/rb_login_mobile">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_mobile_country"
                                    style="@style/CommonTextInputEditText"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:maxLength="4"
                                    android:text="@{loginViewModel.countryCode,default=@string/plus}"
                                    app:addTextChangedListener="@{loginViewModel.countryCodeTextWatcher}"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_mobile_number"
                                style="@style/CommonTextInputEditText"
                                android:layout_width="match_parent"
                                android:layout_marginStart="52dp"
                                android:layout_marginTop="@dimen/dp_18"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:maxLength="14"
                                android:paddingStart="@dimen/dp_18"
                                android:paddingEnd="@dimen/dp_18"
                                app:addTextChangedListener="@{loginViewModel.mobileTextWatcher}"
                                app:errorEnabled="true"/>

                        <View
                                android:id="@+id/view2"
                                android:layout_width="@dimen/dp_1"
                                android:layout_height="@dimen/dp_32"
                                android:layout_marginStart="@dimen/dp_50"
                                android:layout_marginTop="@dimen/dp_50"
                                android:background="@color/ttu_white"/>

                    </FrameLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <FrameLayout
                        android:id="@+id/fl_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_28"
                        android:paddingEnd="@dimen/dp_28"
                        android:layout_marginTop="@dimen/dp_16"
                        app:passwordToggleDrawable="@drawable/show_password_selector">

                    <com.google.android.material.textfield.TextInputLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/txl_login_password"
                            android:hint="@string/edt_login_password_title"
                            style="@style/CommonPasswordTextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_login_password"
                                style="@style/CommonTextInputEditText"
                                android:inputType="textPassword"
                                app:addTextChangedListener="@{loginViewModel.passwordTextWatcher}"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:layout_marginTop="@dimen/dp_38"
                            android:onClick="@{(v)-> loginViewModel.onClick(v)}"
                            android:paddingStart="@dimen/dp_8"
                            android:paddingTop="@dimen/dp_8"
                            android:paddingBottom="@dimen/dp_8"
                            app:srcCompat="@drawable/eye_icon_hide"/>

                </FrameLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_login_forgot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dp_28"
                        android:paddingEnd="@dimen/dp_28">

                    <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/checkbox_Remember"
                            style="@style/CheckboxRemember"
                            android:layout_width="match_parent"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            android:layout_weight="1"
                            android:onCheckedChanged="@{(compoundButton,checked) -> loginViewModel.onCheckedChange(compoundButton,checked)}"
                            android:paddingStart="@dimen/dp_6"
                            android:paddingEnd="@dimen/dp_6"
                            android:text="@string/checkbox_login_remember_me"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_forgot_password"
                            style="@style/ForgotPassword"

                            android:layout_weight="1"
                            android:onClick="@{(v)-> loginViewModel.onClick(v)}"
                            android:text="@string/txt_login_forgot"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_login"
                        style="@style/Login"
                        android:layout_marginStart="@dimen/dp_28"
                        android:layout_marginEnd="@dimen/dp_28"
                        android:layout_marginTop="@dimen/dp_28"
                        android:onClick="@{(v)-> loginViewModel.onClick(v)}"
                        android:text="@string/btn_Log_in"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_sign_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="@dimen/dp_28"
                        android:paddingEnd="@dimen/dp_28"
                        android:gravity="center"
                        android:onClick="@{(v)-> loginViewModel.onClick(v)}"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/YouHaveNotAccount"
                            android:layout_marginEnd="@dimen/dp_2"
                            android:text="@string/txt_login_sign_up"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_sign_up"
                            style="@style/BackToLogin"
                            android:text="@string/sign_up"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_or"
                        android:paddingStart="@dimen/dp_28"
                        android:paddingEnd="@dimen/dp_28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_60"
                        android:orientation="horizontal">

                    <include layout="@layout/include_login_divider_horizontal"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/dp_28"
                        android:paddingEnd="@dimen/dp_28">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_32"
                            android:layout_marginEnd="@dimen/dp_14"
                            android:onClick="@{(v)-> loginViewModel.onClick(v)}"
                            app:layout_constraintEnd_toEndOf="@id/barrier3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_facebook"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_facebook"
                            style="@style/GoogleAndFacebook"
                            android:layout_marginStart="@dimen/dp_14"
                            android:onClick="@{(v)-> loginViewModel.onClick(v)}"
                            android:text="@string/txt_login_facebook"
                            app:layout_constraintBottom_toBottomOf="@+id/img_facebook"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/img_facebook"/>


                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_google"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_18"
                            android:layout_marginEnd="@dimen/sp_14"
                            android:onClick="@{(v)-> loginViewModel.onClick(v)}"
                            app:layout_constraintEnd_toEndOf="@+id/barrier3"
                            app:layout_constraintTop_toBottomOf="@+id/img_facebook"
                            app:srcCompat="@drawable/ic_google"/>


                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_google"
                            style="@style/GoogleAndFacebook"
                            android:onClick="@{(v)-> loginViewModel.onClick(v)}"
                            android:text="@string/txt_login_google"
                            app:layout_constraintBottom_toBottomOf="@+id/img_google"
                            app:layout_constraintStart_toStartOf="@+id/barrier3"
                            app:layout_constraintTop_toTopOf="@+id/img_google"/>

                    <androidx.constraintlayout.widget.Barrier
                            android:id="@+id/barrier3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:barrierDirection="left"
                            app:constraint_referenced_ids="txt_facebook"
                            tools:layout_editor_absoluteX="118dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>