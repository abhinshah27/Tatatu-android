<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="SignUpBinding">

        <variable
            name="signUpViewModel"
            type="rs.highlande.app.tatatu.feature.authentication.view.signUp.viewModels.SignUpViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_sign_up_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_54"
            app:srcCompat="@drawable/ic_logo_red" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/dp_24">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_128">


                <!-- INFO: 2019-08-26    Mobile sign up has been hidden -->
                <RadioGroup
                        android:id="@+id/rg_sign_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_28"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:onCheckedChanged="@{signUpViewModel.radioGroupClick}"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dp_28"
                        android:paddingEnd="@dimen/dp_28"
                        android:visibility="gone">

                    <RadioButton
                            android:id="@+id/rb_sign_up_email"
                            style="@style/loginRadioButton"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:checked="true"
                            android:text="@string/rb_login_email" />

                    <RadioButton
                            android:id="@+id/rb_sign_up_mobile"
                            style="@style/loginRadioButton"
                            android:layout_marginStart="@dimen/dp_16"
                            android:text="@string/rb_login_mobile" />
                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txl_sign_up_full_name"
                    style="@style/CommonTextInputLayout"
                    android:layout_marginTop="@dimen/dp_46"
                    android:hint="@string/email_Name_Title"
                    android:paddingStart="@dimen/dp_28"
                    android:paddingEnd="@dimen/dp_28">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_sign_up_full_name"
                        style="@style/CommonTextInputEditText"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        app:addTextChangedListener="@{signUpViewModel.fullNameTextWatcher}" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_sign_up_email_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_28"
                    android:paddingEnd="@dimen/dp_28">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txl_sign_up_email"
                        style="@style/CommonTextInputLayout"
                        android:hint="@string/msg_email_address"
                        android:visibility="@{safeUnbox(signUpViewModel.emailVisibility)}">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_sign_up_email"
                            style="@style/CommonTextInputEditText"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            app:addTextChangedListener="@{signUpViewModel.emailTextWatcher}" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <FrameLayout
                        android:id="@+id/cl_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:visibility="@{safeUnbox(signUpViewModel.mobileVisibility)}">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txl_mobile"
                            style="@style/CommonTextInputLayout"
                            android:hint="@string/rb_login_mobile">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_mobile_country"
                                style="@style/CommonTextInputEditText"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:maxLength="4"
                                android:text="@{signUpViewModel.countryCode}"
                                app:addTextChangedListener="@{signUpViewModel.countryCodeTextWatcher}"
                                app:selection="@{safeUnbox(signUpViewModel.cursorCount)}" />


                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_mobile_number"
                            style="@style/CommonTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_marginStart="52dp"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:maxLength="14"
                            android:paddingStart="@dimen/dp_18"
                            android:paddingEnd="@dimen/dp_18"
                            app:addTextChangedListener="@{signUpViewModel.mobileTextWatcher}"
                            app:errorEnabled="true" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_32"
                            android:layout_marginStart="@dimen/dp_50"
                            android:layout_marginTop="@dimen/dp_36"
                            android:background="@color/ttu_white" />

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <FrameLayout
                    android:id="@+id/fl_sign_up_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_28"
                    android:paddingEnd="@dimen/dp_28">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txl_sign_up_password"
                        style="@style/CommonPasswordTextInputLayout"
                        android:hint="@string/edt_login_password_title"
                        android:layout_marginTop="@dimen/dp_18">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_sign_up_password"
                            style="@style/CommonTextInputEditText"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            app:addTextChangedListener="@{signUpViewModel.passwordTextWatcher}" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_sign_up_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:layout_marginTop="@dimen/dp_54"
                        android:onClick="@{(v)-> signUpViewModel.onClick(v)}"
                        android:paddingStart="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        app:srcCompat="@drawable/eye_icon_hide" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_sign_up_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_28"
                    android:paddingEnd="@dimen/dp_28">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txl_sign_up_confirm_password"
                        style="@style/CommonPasswordTextInputLayout"
                        android:hint="@string/confirm_password"
                        android:layout_marginTop="@dimen/dp_18">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_sign_up_confirm_password"
                            style="@style/CommonTextInputEditText"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            app:addTextChangedListener="@{signUpViewModel.confirmPasswordTextWatcher}" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_sign_up_confirm_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:layout_marginTop="@dimen/dp_54"
                        android:onClick="@{(v)-> signUpViewModel.onClick(v)}"
                        android:paddingStart="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        app:srcCompat="@drawable/eye_icon_hide" />

                </FrameLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_checkbox_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_28"
                    android:paddingTop="@dimen/padding_margin_medium_12"
                    android:paddingEnd="@dimen/dp_28">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_Terms_signUpFragment"
                        style="@style/CheckboxTermsConditions"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:onCheckedChanged="@{(compoundButton,checked) -> signUpViewModel.onCheckedChange(compoundButton,checked)}"
                        android:paddingStart="@dimen/dp_8"
                        android:paddingEnd="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_terms_conditions"
                        style="@style/TermsAndConditionPrivacyPolicy"
                        android:layout_marginTop="-2dp"
                        android:text="@string/msg_terms_condition"
                        android:textColor="?attr/hintPreview" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sign_up"
                    style="@style/Login"
                    android:layout_marginStart="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_marginEnd="@dimen/dp_28"
                    android:onClick="@{(v)-> signUpViewModel.onClick(v)}"
                    android:text="@string/btn_sign_up"/>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_back_to_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:gravity="center"
                    android:onClick="@{(v)-> signUpViewModel.onClick(v)}"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_28"
                    android:paddingEnd="@dimen/dp_28">


                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/YouHaveNotAccount"
                        android:layout_marginEnd="@dimen/dp_2"
                        android:text="@string/msg_you_have_already_account" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_sign_up_log_in"
                        style="@style/BackToLogin"
                        android:text="@string/sign_up_login" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>