<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="video" type="rs.highlande.app.tatatu.model.TTUVideo"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:background="?colorPrimary">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" tools:srcCompat="@tools:sample/backgrounds/scenic[3]"
                android:scaleType="centerCrop"
                android:id="@+id/imageView3" app:layout_constraintTop_toTopOf="parent"
                app:blurredPoster="@{video.poster}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?videoAlphaBlur" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ScrollView android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:id="@+id/scrollView2"
                    android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:padding="@dimen/padding_margin_default"
                                                               tools:background="@color/black_50">

                <TextView
                        style="@style/PrimaryText"
                        tools:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:id="@+id/textView"
                        android:layout_marginStart="@dimen/padding_margin_large_34"
                        android:textColor="?textColorPrimary"
                        app:readableDuration="@{video.duration}"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                        style="@style/Regular14"
                        android:text="@string/watch_and_earn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="?textColorSecondary"
                        android:id="@+id/textView2" android:layout_marginTop="@dimen/padding_margin_default"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        app:layout_constraintStart_toStartOf="@+id/textView"/>
                <TextView
                        style="@style/PrimaryText"
                        tools:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_ttu_token_flat"
                        android:drawablePadding="@dimen/dp_7"
                        android:id="@+id/tokensToEarn"
                        android:gravity="center_vertical"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
                        app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"/>
                <ImageView
                        android:layout_width="150dp"
                        android:layout_height="222dp" tools:srcCompat="@tools:sample/backgrounds/scenic[3]"
                        android:id="@+id/poster" android:layout_marginTop="@dimen/padding_margin_large_34"
                        android:scaleType="centerCrop"
                        app:videoPoster="@{video.poster}"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        app:layout_constraintStart_toStartOf="@+id/countryAndGenres"
                        app:layout_constraintEnd_toEndOf="@+id/countryAndGenres"/>
                <TextView
                        style="@style/PrimaryText"
                        tools:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/countryAndGenres" android:layout_marginTop="@dimen/padding_margin_large_26"
                        app:videoDetails="@{video.details.getDetailsString()}"
                        app:layout_constraintTop_toBottomOf="@+id/poster"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
                <TextView
                        style="@style/DefaultButton.Caps.Big.Accent"
                        android:text="@string/action_play"
                        android:layout_width="0dp"
                        android:id="@+id/btnPlay" android:layout_marginTop="@dimen/padding_margin_large_26"
                        app:layout_constraintWidth_percent=".7"
                        app:layout_constraintTop_toBottomOf="@+id/countryAndGenres"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                        style="@style/PrimaryText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/longDescription" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="@dimen/padding_margin_medium_12"
                        android:text="@{video.longDescription}"
                        android:lineSpacingExtra="3dp"
                        app:layout_constraintTop_toBottomOf="@+id/btnPlay"/>

                <View
                        style="@style/DefaultDivider" android:layout_width="0dp"
                        android:layout_height="@dimen/divider_size"
                        android:id="@+id/divider"
                        android:layout_marginTop="@dimen/padding_margin_medium_12"
                        app:layout_constraintTop_toBottomOf="@id/longDescription"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                        style="@style/Regular14"
                        android:text="@string/video_detail_director"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?textColorSecondary"
                        android:id="@+id/labelDirector"
                        android:layout_marginTop="@dimen/padding_margin_medium_12"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textDirector"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        style="@style/Regular14"
                        android:text="@string/video_detail_writers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?textColorSecondary"
                        android:id="@+id/labelWriters" android:layout_marginTop="@dimen/padding_margin_small_6"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textWriters"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        style="@style/Regular14"
                        android:text="@string/video_detail_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?textColorSecondary"
                        android:id="@+id/labelStars" android:layout_marginTop="@dimen/padding_margin_small_6"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textStars"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        style="@style/PrimaryText"
                        android:text="@{video.details.director}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:id="@+id/textDirector"
                        android:layout_marginStart="@dimen/padding_margin_small_4"
                        android:layout_marginTop="@dimen/padding_margin_medium_12"
                        app:layout_constraintTop_toBottomOf="@+id/divider"
                        app:layout_constraintStart_toEndOf="@id/labelDirector"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <!-- INFO: 2019-07-22    currently no writers in video model -->
                <TextView
                        style="@style/PrimaryText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:id="@+id/textWriters"
                        android:layout_marginStart="@dimen/padding_margin_small_4"
                        android:layout_marginTop="@dimen/padding_margin_small_6"
                        android:text="@{video.details.director}"
                        app:layout_constraintTop_toBottomOf="@+id/textDirector"
                        app:layout_constraintStart_toEndOf="@id/labelWriters"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                        style="@style/PrimaryText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:id="@+id/textStars"
                        android:layout_marginStart="@dimen/padding_margin_small_4"
                        android:layout_marginTop="@dimen/padding_margin_small_6"
                        android:text="@{video.details.cast}"
                        app:layout_constraintTop_toBottomOf="@+id/textWriters"
                        app:layout_constraintStart_toEndOf="@id/labelStars"
                        app:layout_constraintEnd_toEndOf="parent"/>


                <androidx.constraintlayout.widget.Group
                        android:id="@+id/groupDirector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:hideDirector="@{video.details.director}"
                        app:constraint_referenced_ids="labelDirector,textDirector"/>


                <!-- INFO: 2019-07-22    currently no writers in video model -->
                <androidx.constraintlayout.widget.Group
                        android:id="@+id/groupWriters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:hideWriters="@{video.details.director}"
                        app:constraint_referenced_ids="labelWriters,textWriters"/>

                <androidx.constraintlayout.widget.Group
                        android:id="@+id/groupCast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:hideStars="@{video.details.cast}"
                        app:constraint_referenced_ids="labelStars,textStars"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>