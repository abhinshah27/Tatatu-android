<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.bottomnavigation.BottomNavigationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_navigation_height"
        android:id="@+id/bottom_navigation"
        android:background="?bottomNavBackground"
        app:itemTextAppearanceActive="@style/TextBottomNavigation"
        app:itemTextAppearanceInactive="@style/TextBottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemBackground="?selectableItemBackground"
        app:itemIconTint="?bottomNavItemTint"
        app:itemTextColor="?bottomNavItemTint"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_main_bottom_navigation"/>