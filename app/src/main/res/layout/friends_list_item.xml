<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_margin_medium_14">

        <include
                layout="@layout/common_round_avatar_with_username"
                android:id="@+id/followerAvatar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/friendTTUBadgeImageView" android:layout_marginEnd="8dp"/>

        <ImageView
                android:id="@+id/friendTTUBadgeImageView"
                android:layout_width="@dimen/follower_ttu_badge_size"
                android:layout_height="@dimen/follower_ttu_badge_size"
                app:srcCompat="@drawable/ic_ttu_token_flat"
                app:layout_constraintTop_toTopOf="@+id/followerAvatar"
                app:layout_constraintBottom_toBottomOf="@+id/followerAvatar"
                app:layout_constraintEnd_toStartOf="@+id/followerTTUBalanceTextView"/>

        <TextView
                style="@style/FollowerTTUBalance"
                android:id="@+id/followerTTUBalanceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="@string/placeholder"
                app:layout_constraintTop_toTopOf="@+id/friendTTUBadgeImageView"
                app:layout_constraintBottom_toBottomOf="@+id/friendTTUBadgeImageView"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

