<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProfileContainer">
        <item name="android:background">?profileBackground</item>
    </style>

    <style name="BaseText" parent="@style/Regular14">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextLabel" parent="BaseText">
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="TextValue" parent="BaseText">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ProfileFollowerText" parent="TextValue">
        <item name="android:paddingEnd">@dimen/dp_40</item>
        <item name="android:paddingStart">@dimen/dp_40</item>
        <item name="layout_constraintWidth_max">@dimen/profile_container_width_followers</item>
    </style>

    <style name="ProfileFollowerTextLabel" parent="ProfileFollowerText">
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:text">@string/profile_followers</item>
        <item name="android:paddingTop">@dimen/padding_margin_large_28</item>
        <item name="android:paddingBottom">@dimen/padding_margin_small_8</item>
    </style>

    <style name="ProfileFollowingText" parent="TextValue">
        <item name="android:paddingEnd">@dimen/padding_margin_large_26</item>
        <item name="android:paddingStart">@dimen/padding_margin_large_26</item>
        <item name="layout_constraintWidth_max">@dimen/profile_container_width_following</item>
    </style>

    <style name="ProfileFollowingTextLabel" parent="ProfileFollowingText">
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:text">@string/profile_following</item>
        <item name="android:paddingTop">@dimen/padding_margin_large_28</item>
        <item name="android:paddingBottom">@dimen/padding_margin_small_8</item>
    </style>

    <style name="ProfileImage">
        <item name="android:layout_marginTop">@dimen/padding_margin_large_28</item>
        <item name="android:layout_marginStart">@dimen/padding_margin_large_22</item>
    </style>

    <style name="ProfileAction">
        <item name="android:layout_marginStart">@dimen/dp_25</item>
    </style>

    <style name="ProfileName" parent="@style/Bold16">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:paddingEnd">@dimen/padding_margin_small_8</item>
        <item name="android:layout_marginTop">@dimen/padding_margin_large_22</item>
        <item name="android:layout_marginStart">@dimen/padding_margin_medium_16</item>
        <item name="android:layout_marginEnd">@dimen/padding_margin_medium_16</item>
        <item name="android:layout_marginBottom">@dimen/padding_margin_small_8</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="ProfileTitle" parent="TextLabel">
        <item name="android:textColor">?textColorPrimaryLight</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:paddingTop">@dimen/padding_margin_small_6</item>
        <item name="android:gravity">start</item>
    </style>


    <style name="ProfileDesc" parent="TextLabel">
        <item name="android:textColor">?textColorPrimaryLight</item>
        <item name="android:paddingTop">@dimen/dp_46</item>
        <item name="android:paddingStart">@dimen/padding_margin_medium_16</item>
        <item name="android:paddingEnd">@dimen/padding_margin_medium_16</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="ProfileWebSite" parent="TextLabel">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textColorLink">?textColorPrimary</item>
        <item name="android:paddingTop">@dimen/padding_margin_small_6</item>
        <item name="android:paddingBottom">@dimen/padding_margin_large_20</item>
        <item name="android:gravity">start</item>
    </style>


    <style name="ProfileDonatingLabel" parent="BaseText">
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:layout_marginTop">@dimen/padding_margin_large_20</item>
        <item name="android:paddingEnd">@dimen/padding_margin_small_8</item>
    </style>

    <style name="InsightsLabel" parent="TextValue">
        <item name="android:paddingStart">@dimen/padding_margin_small_4</item>
        <item name="android:paddingEnd">@dimen/padding_margin_small_4</item>
    </style>

    <style name="ProfileButton" parent="DefaultButton">
        <item name="android:background">@drawable/button_rounded_corners</item>
        <item name="android:backgroundTint">?attr/buttonColorPrimaryInverted</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">@dimen/padding_margin_medium_14</item>
        <item name="android:paddingEnd">@dimen/padding_margin_medium_14</item>
        <item name="android:paddingTop">@dimen/padding_margin_small_10</item>
        <item name="android:paddingBottom">@dimen/padding_margin_small_8</item>
    </style>

    <style name="ProfileButtonSecondary" parent="ProfileButton">
        <item name="android:backgroundTint">?attr/buttonColorSecondary</item>
    </style>

    <style name="FollowButton" parent="ProfileButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingStart">@dimen/padding_margin_small_9</item>
        <item name="android:paddingEnd">@dimen/padding_margin_small_9</item>
        <item name="android:paddingTop">@dimen/padding_margin_small_10</item>
        <item name="android:paddingBottom">@dimen/padding_margin_small_10</item>
    </style>

    <style name="ProfileTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/CommonTab</item>
    </style>

    <style name="ProfileTabText" parent="BaseText">
        <item name="android:textColor">@color/profile_tab_text_color</item>
    </style>

    <style name="FollowTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?tabBackgroundColor</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicatorColor">?tabSelectedBackgroundColor</item>
        <item name="tabTextColor">?textColorSecondary</item>
        <item name="tabSelectedTextColor">?textColorPrimary</item>
        <item name="tabTextAppearance">@style/CommonTab</item>
    </style>

    <style name="FollowRequestsLabel" parent="Regular14">
        <item name="android:textColor">?textColorPrimaryLight</item>
        <item name="android:paddingEnd">@dimen/padding_margin_small_8</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FollowRequestsCount" parent="Light9">
        <item name="android:textColor">?textColorPrimaryInverted</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_margin_small_4</item>
    </style>

    <style name="FollowRequestsArrowIcon">
        <item name="android:tint">?iconColorSelected</item>
        <item name="android:layout_marginStart">@dimen/padding_margin_medium_16</item>
        <item name="android:layout_marginEnd">@dimen/padding_margin_medium_16</item>
    </style>

    <style name="FollowerRelationIcon">
        <item name="android:layout_marginEnd">@dimen/padding_margin_medium_18</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="FollowerTTUBadge">
        <item name="android:layout_marginEnd">@dimen/dp_56</item>
    </style>

    <style name="FollowerTTUBalance">
        <item name="android:paddingStart">@dimen/padding_margin_small_6</item>
    </style>

    <style name="NoFriendsLabel" parent="Regular20">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_54</item>
        <item name="android:text">@string/follow_no_friends_label</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NoFriendsSubLabel" parent="Regular14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_margin_large_34</item>
        <item name="android:text">@string/follow_no_friends_sub_label</item>
        <item name="android:textColor">?textColorPrimaryLight</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>