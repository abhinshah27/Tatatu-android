        <item name="android:textSize">20sp</item>
    </style>

    <style name="RegularShadow25" parent="TextRegularWithShadow">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="RegularShadow26" parent="TextRegularWithShadow">
        <item name="android:textSize">26sp</item>
    </style>


    <style name="TextBoldWithShadow" parent="TextWithShadow">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="BoldShadow16" parent="TextBoldWithShadow">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BoldShadow18" parent="TextBoldWithShadow">
        <item name="android:textSize">18sp</item>
