<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultToolbarCalls">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">?toolbarTransparentColor</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="titleTextAppearance">@style/TextViewToolbarTitle</item>
        <item name="contentInsetStart">@dimen/padding_margin_small_8</item>
        <item name="contentInsetLeft">@dimen/padding_margin_small_8</item>
    </style>

    <style name="TextViewToolbarCallsTitle" parent="@style/Regular14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?callsTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
    </style>

