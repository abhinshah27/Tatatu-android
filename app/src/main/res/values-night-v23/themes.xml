<?xml version="1.0" encoding="utf-8"?>

<!-- INFO: 2019-06-25    This file is needed because only since M-23 it is possible to give the status bar a color -->

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Customize your theme here. -->

        <!--
            There cannot be a "darker" white: this separation has been maintained to indicate the general background of
            a screen and possible other views' background like toolbars and bottom bars.
         -->
        <item name="colorPrimary">@color/ttu_d_primary</item>
        <item name="colorPrimaryVariant">@color/ttu_d_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/ttu_d_background_toolbar</item>

        <!-- Commented: usually used for the status bar color, not valid in this case -->
        <!--<item name="colorPrimaryDark">@color/ttu_l_primary_dark</item>-->

        <item name="android:statusBarColor">?toolbarBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:fitsSystemWindows">true</item>


        <item name="buttonColorPrimary">@color/ttu_white</item>
        <item name="buttonTextColorPrimary">@color/black</item>
        <item name="buttonColorPrimaryInverted">@color/ttu_whitethree</item>
        <item name="buttonColorSecondary">@color/ttu_warmgray</item>
        <item name="buttonOutlinedColor">@color/ttu_warmgray</item>

        <item name="dividerColor">@color/ttu_blacktwo_bis</item>
        <item name="dividerColorSecondary">@color/ttu_l_divider_secondary</item>

        <item name="textColorPrimary">@color/ttu_d_text_primary</item>
        <item name="textColorSecondary">@color/ttu_d_text_secondary</item>
        <item name="textColorTitle">@color/ttu_d_text_title</item>
        <item name="textColorPrimaryLight">@color/ttu_d_text_primary_light</item>
        <item name="textColorPrimaryInverted">@color/ttu_l_text_primary_inverted</item>
        <item name="textColorBottomSheet">@color/ttu_l_text_bottom_sheet</item>
        <item name="buttonTextColorSecondary">@color/ttu_white</item>

        <item name="textColorNoResult">@color/ttu_d_text_no_result</item>
        <item name="callsBackgroundColor">@color/ttu_black</item>
        <item name="callsTextColor">@color/ttu_white</item>

        <item name="iconColorNormal">@color/ttu_l_icon_normal</item>
        <item name="iconColorSelected">@color/ttu_d_icon_selected</item>
        <item name="iconColorAccent">@color/ttu_l_icon_accent</item>
        <item name="iconColorDisabled">@color/ttu_l_icon_disabled</item>

        <item name="tabSelectedBackgroundColor">@color/ttu_black</item>
        <item name="tabBackgroundColor">@color/black</item>

        <item name="selectableItemBackground">@drawable/default_ripple</item>
        <item name="toolbarTransparentColor">@color/transparent</item>

        <!-- [START] COMMON COMPONENTS -->

        <item name="toolbarBackground">@color/ttu_d_background_toolbar</item>
        <item name="toolbarIcon">@color/ttu_whitethree</item>
        <item name="toolbarTitle">@color/ttu_whitethree</item>

        <item name="bottomNavBackground">?colorPrimaryVariant</item>
        <item name="bottomNavItemTint">@color/bottom_nav_item_tint</item>
        <item name="bottomNavItemSelected">@color/ttu_l_bottom_nav_selected</item>
        <item name="bottomNavItemNormal">@color/ttu_l_bottom_nav_normal</item>

        <item name="wfiBackground">@color/ttu_d_background_wfi</item>
        <item name="wfiLabel">@color/ttu_graylabel</item>
        <item name="wfiText">?textColorPrimary</item>

        <item name="buttonBorder">@color/black</item>

        <item name="newItemBackground">@color/ttu_d_background_black</item>

        <item name="preloadingBackground">@color/ttu_l_loading_background</item>
