        <item name="celebrityIndicatorColor">@color/colorAccent</item>

        <item name="lightBackground">@color/black</item>

        <item name="itemColorSelected">@color/ttu_d_item_background_selected</item>

        <!-- [END] COMMON COMPONENTS -->

        <!--CreatePost-->
        <item name="postDividerColor">@color/ttu_divider</item>
