        <!--inviteFriends-->
        <item name="inviteFriendsTitle">@color/ttu_warmgray</item>
        <item name="inviteFriendsExpandableBackground">@color/ttu_blackthree</item>
        <item name="inviteFriendsExpandableText">@color/ttu_d_expandable_text</item>
        <item name="inviteFriendsEmailSend">@color/ttu_light_gray</item>

